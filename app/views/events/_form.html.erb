<%= form_for @event do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      Название:<br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      Опубликовано:<br />
      <div class="input-append date">
        <%= f.text_field :published_on, value: (f.object.published_on.nil? ? "" : f.object.published_on.strftime("%d.%m.%Y")) %>
        <span class="add-on"><i class="icon-th"></i></span></div>
    </div>
    <div class="field">
      Содержание:<br />
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
    </div>
<% end %>
